<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/corner_radius_normal"
    app:cardBackgroundColor="@color/gray">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/text_size_big"
        android:layout_marginStart="@dimen/margin_small"/>

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_big"
        app:layout_constraintTop_toTopOf="@id/name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin_small"/>

    <ImageView
        android:id="@+id/temp_icon"
        android:layout_width="@dimen/image_w_size_small"
        android:layout_height="@dimen/image_h_size_small"
        app:layout_constraintEnd_toEndOf="@id/temp"
        app:layout_constraintTop_toBottomOf="@id/temp" />

    <ImageView
        android:id="@+id/temp_max_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
        app:layout_constraintTop_toTopOf="@id/temp_max"
        app:layout_constraintBottom_toBottomOf="@id/temp_max"
        app:layout_constraintStart_toStartOf="@id/name"/>

    <TextView
        android:id="@+id/temp_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toEndOf="@id/temp_max_icon"
        android:layout_marginTop="@dimen/margin_small"/>

    <ImageView
        android:id="@+id/temp_min_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
        app:layout_constraintTop_toTopOf="@id/temp_min"
        app:layout_constraintBottom_toBottomOf="@id/temp_min"
        app:layout_constraintStart_toEndOf="@id/temp_max"/>

    <TextView
        android:id="@+id/temp_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toEndOf="@id/temp_min_icon"
        android:layout_marginTop="@dimen/margin_small"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/temp_max"
        app:layout_constraintStart_toStartOf="@id/name"
        android:layout_marginTop="@dimen/margin_small"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>